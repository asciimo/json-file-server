  "instructionGroups": [
    {
      "label": "For the salad",
      "instructions": [
        "In a large bowl, combine the chickpeas, diced cucumber, diced tomato, sliced red onion, Kalamata olives, and crumbled feta cheese.",
        "Toss gently to mix the ingredients well."
      ]
    },
    {
      "label": "For the dressing",
      "instructions": [
        "In a small bowl, whisk together the extra virgin olive oil, lemon juice, minced garlic, dried oregano, salt, and black pepper.",
        "Drizzle the dressing over the salad and toss to coat evenly.",
        "Adjust the seasoning if needed.",
        "Refrigerate the salad for at least 30 minutes before serving to allow the flavors to meld."
      ]
    }
  ],
  "tips": [
