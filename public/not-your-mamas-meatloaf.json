  "ingredientGroups": [
    {
      "label": "For the red sauce",
      "ingredients": [
        {
          "name": "ketchup",
          "amount": "½ cup",
          "preparation": null
        },
        {
          "name": "agave nectar",
          "amount": "½ tablespoon",
          "preparation": null
        },
        {
          "name": "vegan Worcestershire sauce",
          "amount": "1 tablespoon",
          "preparation": null
        }
      ]
    },
    {
      "label": "For the farro loaf",
      "ingredients": [
        {
          "name": "uncooked farro",
          "amount": "3 cups",
          "preparation": null
        },
        {
          "name": "liquid aminos",
          "amount": "¼ cup",
          "preparation": null
        },
        {
          "name": "bulgur",
          "amount": "2 cups",
          "preparation": "soaked in water for 30 minutes and drained"
        },
        {
          "name": "walnuts",
          "amount": "2 cups",
          "preparation": null
        },
        {
          "name": "crimini mushrooms",
          "amount": "1½ cups",
          "preparation": null
        },
        {
          "name": "shredded vegan cheddar cheese",
          "amount": "1 cup",
          "preparation": null
        },
        {
          "name": "vegan Worcestershire sauce",
          "amount": "2 tablespoons",
          "preparation": null
        },
        {
          "name": "water",
          "amount": "¼ cup",
          "preparation": null
        },
        {
          "name": "no-salt seasoning",
          "amount": "1 tablespoon",
          "preparation": null
        },
        {
          "name": "celery",
          "amount": "¼ cup",
          "preparation": "chopped"
        },
        {
          "name": "carrots",
          "amount": "¼ cup",
          "preparation": "chopped"
        },
        {
